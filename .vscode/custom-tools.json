{
    "variables": {
        "var1": "abc",
        "var2": 1234,
        "cmd": "runShell"
    },
    "statusbar": [
        {
            "text": "$(terminal)",
            "tooltip": "run shell 1",
            "commands": [
                {
                    "id": "workbench.action.tasks.runTask",
                    "args": "runShell"
                }
            ]
        },
        {
            "text": "$(terminal)",
            "tooltip": "run shell 2",
            "commands": [
                {
                    "id": "workbench.action.tasks.runTask",
                    "args": {
                        "task": "${cmd}"
                    }
                }
            ]
        },
        {
            "text": "$(flame)",
            "tooltip": "cmd2",
            "commands": [
                {
                    "id": "workbench.action.terminal.focus"
                },
                {
                    "id": "workbench.action.terminal.sendSequence",
                    "args": {
                        "text": "echo ${file} ${var1} ${var2}\n"
                    }
                }
            ]
        },
        {
            "text": "$(arrow-left)",
            "tooltip": "cmd3",
            "commands": [
                {
                    "id": "workbench.action.tasks.showTasks"
                }
            ]
        }
     ]
 }
